<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_dataStart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/schedule_data_start" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_dataStartCompleteSelection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/schedule_data_start_complete_selection" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_dataEnd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/schedule_checkbox_touchable_size" />

    <ImageButton
        android:id="@+id/button_complete"
        android:layout_width="@dimen/schedule_checkbox_touchable_size"
        android:layout_height="@dimen/schedule_checkbox_touchable_size"
        android:alpha="0.5"
        android:background="@null"
        android:contentDescription="@string/content_description_complete_toggle"
        android:padding="15dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/guideline_dataStart"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/checkbox_schedule_check_on_point1" />

    <ImageButton
        android:id="@+id/button_selection"
        android:layout_width="@dimen/schedule_checkbox_touchable_size"
        android:layout_height="@dimen/schedule_checkbox_touchable_size"
        android:alpha="1"
        android:background="@null"
        android:contentDescription="@string/content_description_select"
        android:padding="16dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_dataStart"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/checkbox_schedule_select_selector" />

    <View
        android:id="@+id/view_button_complete_hidden"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_dataStartCompleteSelection"
        app:layout_constraintStart_toStartOf="@id/guideline_dataStart"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_data_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/view_line"
        app:layout_constraintEnd_toEndOf="@id/guideline_dataEnd"
        app:layout_constraintHeight="wrap_content"
        app:layout_constraintHeight_min="@dimen/schedule_checkbox_touchable_size"
        app:layout_constraintStart_toStartOf="@id/guideline_dataStart"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_drag_handle"
        android:layout_width="@dimen/schedule_checkbox_touchable_size"
        android:layout_height="@dimen/schedule_checkbox_touchable_size"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/content_description_drag"
        android:padding="15dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_dataEnd"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_drag_handle"
        app:tint="?content_3" />

    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="?bg_line_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_dataStart"
        app:layout_constraintTop_toBottomOf="@id/layout_data_holder" />

</androidx.constraintlayout.widget.ConstraintLayout>